<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/all_income"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="收入"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/all_pay"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/all_income"
                android:gravity="center"
                android:text="支出"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/show_all_income"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/all_income"
                android:gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/show_all_pay"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@id/all_pay"
                android:layout_toRightOf="@id/show_all_income"
                android:gravity="center"
                android:textSize="20dp" />

        </RelativeLayout>

        <ListView
            android:id="@+id/show_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDarkYellow"></ListView>
    </LinearLayout>




</LinearLayout>